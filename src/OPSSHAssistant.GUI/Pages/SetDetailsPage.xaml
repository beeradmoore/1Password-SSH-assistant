<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pages="clr-namespace:OPSSHAssistant.GUI.Pages;assembly=1Password SSH Assistant"
             xmlns:data="clr-namespace:OPSSHAssistant.Core.Data;assembly=OPSSHAssistant.Core"
             x:Class="OPSSHAssistant.GUI.Pages.SetDetailsPage"
             x:DataType="pages:SetDetailsPageModel"
             Title="Set Details">
    <Grid RowDefinitions="*,Auto">
        <ScrollView Grid.Row="0">
            <VerticalStackLayout BindableLayout.ItemsSource="{Binding Items}" Spacing="16">
                <BindableLayout.ItemTemplate>
                    <DataTemplate x:DataType="data:Item">
                        <Grid RowDefinitions="Auto,Auto,Auto" ColumnSpacing="8" ColumnDefinitions="Auto,*" MaximumWidthRequest="500">
                            <Label Grid.Row="0" Grid.Column="0" Text="SSH Key:" VerticalOptions="Center" FontAttributes="Bold" />
                            <Label Grid.Row="1" Grid.Column="0" Text="Username:" VerticalOptions="Center" FontAttributes="Bold" />
                            <Label Grid.Row="2" Grid.Column="0" Text="Host:" VerticalOptions="Center" FontAttributes="Bold" />
                            
                            <Entry Grid.Row="0" Grid.Column="1" Text="{Binding Title}" IsReadOnly="True"  />
                            <Entry Grid.Row="1" Grid.Column="1" Text="{Binding Username}" />
                            <Entry Grid.Row="2" Grid.Column="1" Text="{Binding Host}" />
                        </Grid>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </VerticalStackLayout>
        </ScrollView>
        
        <Button Grid.Row="1" Text="Preview Changes" Command="{Binding GoToPreviewChangesCommand}" Padding="16" />

    </Grid>
</ContentPage>